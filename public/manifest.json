{
  "manifest_version": 3,
  "name": "SiteSage-AI Website ChatBot",
  "version": "1.0.0",
  "description": "SiteSage-AI Website ChatBot",
  "action": {
    "default_popup": "index.html"
  },
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "tabs"
  ],
  "host_permissions": [
    "<all_urls>"
  ],

  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
